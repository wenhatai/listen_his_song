	$.ajax({
		url:"fgroup/friendgroup.php",
		type:"POST",
		data:{"allgid":allgid},
		success:function(data){
			var fopenids=data.split("<br>");
			var gid=allgid.split("<tr>");
			for(var i=0;i<fopenids.length-1;i++){
				var fopenid=fopenids[i].split("<tr>");
				for(var j=0;j<fopenid.length-1;j++){
					for(var k=0;k<friends.items.length;k++){
						if(friends.items[k].openid==fopenid[j]){
							$("#"+gid[i]).append("<li><img src="+ friends.items[k].figureurl +" alt='another' />"
							+"<span>"+ friends.items[k].nickname +"</span></li>");
