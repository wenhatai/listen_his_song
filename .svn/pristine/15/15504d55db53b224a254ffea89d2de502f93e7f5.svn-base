	$.ajax({
		url:"fgroup/fgrouplist.php",
		type:"POST",
		data:{"openid":openid},
		success:function(data){
			var groupinfo=data.split("<br>");
			allgid=groupinfo[0];
			allname=groupinfo[1];
			var gid=allgid.split("<tr>");
			var name=allname.split("<tr>");
			for(var i=0;i<name.length;i++){
				$("#friendlist ul:first").append("<li class='grouping'><span class='friendtitle'>"+ name[i] +"</span>"
				+"<ul class='list' id="+ gid[i] +"></ul></li>");
