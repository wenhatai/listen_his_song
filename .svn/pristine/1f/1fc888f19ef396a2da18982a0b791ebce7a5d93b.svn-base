$(document).ready(function(){
  $("#search3").click(function(){
     window.location=" http://localhost/listen-his-songs/rate/get_highrates_of_friendsong.html";
	 });
  $("#out").click(function(){
     window.location=" http://localhost/listen-his-songs/user/theme.html";
	});
  $("#searching").click(function(){
     var id = $("#id1").val();
	 if(id=="")
	 {
	   alert("ID输入不能为空！");
	   return;
	 }
	$.ajax({
		url:"../p/get_highrates_of_friendsong.php",
		type:"POST",
		data:{"friendid":id},
		success:function(data){
			var fri1=data.split("!");
			var num=parseInt(fri1[0]);
			if(num==0)
			{
			   alert("对不起，未查到该好友听歌记录！");
			}
			else
			{
			var fri=fri1[1];
			var fri2=fri.split("|");
			$("#high_rate").append("<tr><td>好友：</td><td>"+id+"<td></tr>"); 
			$("#high_rate").append("<tr><td>五天内高频播放</td><td>"+fri2[0]+"<td></tr>"); 
			$("#high_rate").append("<tr><td>十天内高频播放</td><td>"+fri2[1]+"<td></tr>"); 
			$("#high_rate").append("<tr><td>十五天内高频播放</td><td>"+fri2[2]+"<td></tr>"); 
			$("#high_rate").append("<tr><td>一个月内高频播放</td><td>"+fri2[3]+"<td></tr>"); 
			}
		}
	});
  });
});