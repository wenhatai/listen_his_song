$(document).ready(function(){
	$("#login").click(function(){
		var struid = $("#uid").val();
		var strpass = $("#pass").val();
		if(struid == ""){
			alert("账号不能为空");
			return;
		}
		if(strpass == ""){
			alert("密码不能为空");
			return;
		}
		$.ajax({
			url:"../p/login.php",
			type:"POST",
			data:{"uid":struid, "pass":strpass},
			success:function(data){
				if(data == 0){
					alert("ID号或密码错误！");
					return;
				} else if(data == 1) {
					$("p").text("已经登录过,请先注销！");
					return;
				}
				else{
				$("p").text("欢迎你!" + data + ",即将跳转...");
				setTimeout("javascript:location.href='http://localhost/listen-his-songs/index.html'", 2000); 
                				
				}
			}
		});
	});
	
	$("#logout").click(function(){
		$.ajax({
			url:"../p/logout.php",
			success:function(data){
			   if(data==3)
			   {
			     alert("感谢您！ 欢迎下次访问！");
				 window.location=" http://localhost/listen-his-songs/user/login.html";
			   }
			}
		});
	});
	$("#regist1").click(function(){
	  window.location=" http://localhost/listen-his-songs/user/regist.html";
	});
});