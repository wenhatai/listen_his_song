$(document).ready(function(){
  $("#search4").click(function(){
      window.location=" http://localhost/listen-his-songs/user/songrank_bygenre.html";
  });
  $("#out").click(function(){
      window.location=" http://localhost/listen-his-songs/user/theme.html";
  });
  $("#rank").click(function(){
     var genre = $("#genre").val();
	 if(genre=="")
	 {
	     alert("请输入流派名称！");
		 return;
	 }
   $.ajax({
      url:"../p/songrank_bygenre.php",
	  type:"POST",
	  data:{"genre":genre},
	  success:function(data){
			var fri1=data.split("!");
			var num=parseInt(fri1[0]);
			if(num==0)
			{
			   alert("对不起，未搜索到相应流派!");
			}
			else
			{
			var fri=fri1[1];
			var fri2=fri.split("|");
			$("#songrank").append("<tr><th>排名</th><th>歌曲名</th></tr>");   
			for(var i=0; i<num; i++){ 
					$("#songrank").append("<tr><td>"+(i+1)+"</td><td>"+fri2[i]+"</td></tr>");  
			}
			}
	  }
   });
  });
});