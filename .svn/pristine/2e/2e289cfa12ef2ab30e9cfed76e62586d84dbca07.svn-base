$(document).ready(function(){
  $("#search").click(function(){
     var name = $("#name").val();
	 if(name=="")
	 {
	   alert("昵称不能为空！");
	   return;
	 }
	$.ajax({
		url:"../p/searchfriend.php",
		type:"POST",
		data:{"name1":name},
		success:function(data){
			var fri1=data.split("!");
			var num=parseInt(fri1[0]);
			if(num==0)
			{
			   alert("对不起，未查到相关好友！");
			}
			else
			{
			var fri=fri1[1];
			var fri2=fri.split("|");
			$("#friend").append("<tr><th>账号</th><th>昵称</th></tr>");   
			for(var i=0; i<num; i++){ 
					$("#friend").append("<tr><td id=fri2[i+1]>"+fri2[i+1]+"</td><td id=fri2[i+1+num]>"+fri2[i+1+num]+"</td></tr>");  
			}
			}
		}
	});
  });
});