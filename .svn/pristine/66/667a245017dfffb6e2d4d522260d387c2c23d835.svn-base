<?php
if ((($_FILES["file"]["type"] == "audio/mp3")   			//mp3音乐类型
|| ($_FILES["file"]["type"] == "audio/x-ms-wma")   			//wma音乐类型
|| ($_FILES["file"]["type"] == "application/x-digitalloca") //歌词常用格式lcr
||($_FILES["file"]["type"] == "audio/x-wav"))      			//wav音乐类型
&&($_FILES["file"]["size"] < 10485760)){     				//文件不能超过10M
	if ($_FILES["file"]["error"]==1||$_FILES["file"]["error"]==2)
    	echo "<script language=\"javascript\">alert('文件不能超过10M');</script>";
  	elseif($_FILES["file"]["error"]==3)
  		echo "<script language=\"javascript\">alert('文件只有部分上传');</script>";
  	elseif ($_FILES["file"]["error"]==4||$_FILES["file"]["error"]==5)
  		echo "<script language=\"javascript\">alert('您上传文件为空');</script>";
	else{
    	echo "您上传的文件: " . $_FILES["file"]["name"] . "<br />";
    	if (file_exists("../upload/" . $_FILES["file"]["name"])){
      		echo $_FILES["file"]["name"]." 已经存在 ";
      	}
    	else{
			move_uploaded_file($_FILES["file"]["tmp_name"],
      		"../upload/" . $_FILES["file"]["name"]);
      		echo "储存在: "."upload/".$_FILES["file"]["name"];
      		echo "<script language=\"javascript\">alert('上传成功');</script>";
      	}
	}
}
else{
  echo "<script language=\"javascript\">alert('非法文件');</script>";
}
?>