$(document).ready(function(){
	$("#submit_button").click(function(){
		var strname = $("#name").val();
		var strpass = $("#pass").val();
		var confirm = $("#confirm").val();
		if(strname == ""){
			alert("账号不能为空");
			return;
		}
		if(strpass == ""){
			alert("密码不能为空");
			return;
		}
		if(confirm == ""){
			alert("请确认密码！");
			return;
		}
		if(strpass != confirm){
			alert("两次密码不一致");
			return;
		}
		$.ajax({
			url:"../p/regist.php",
			type:"POST",
			data:{"name":strname, "pass":strpass},
			success:function(data){
			    alert("注册成功！您的ID号为："+data);
			$("p").text("欢迎你!" + data+ ",页面即将跳转...");	
			setTimeout("javascript:location.href='http://localhost/listen-his-songs/user/login.html'", 5000); 
			}
		});
	});
});