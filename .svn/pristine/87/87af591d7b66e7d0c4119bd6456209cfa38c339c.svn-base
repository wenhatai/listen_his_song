$(document).ready(function(){
	$("#addfriend").click(function(){
		var strfid = $("#fid").val();
		var strfname = $("#fname").val();
		if(strfid == ""){
			alert("FID不能为空");
			return;
		}
		var params = {"fid":strfid};
		if(strfname != ""){
			params.fname = strfname;
		}
		$.ajax({
			url:"../p/addfriend.php",
			type:"POST",
			data:params,
			success:function(data){
				if(data == 0){
					alert("添加好友失败！");
					return;
				}
				if(data == 2)
				{
				    alert("您还未登陆，请先登录！");
					window.location=" http://localhost/listen-his-songs/user/login.html";
					return;
				}
                if(data == 1)
				{
				alert("好友添加成功！");
                }				
			}
		});
	});
	$("#exit").click(function(){
	window.location=" http://localhost/listen-his-songs/user/theme.html";
	});
});