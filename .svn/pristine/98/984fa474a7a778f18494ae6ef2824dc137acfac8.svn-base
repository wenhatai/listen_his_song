$(document).ready(function(){
  $("#search1").click(function(){
     window.location=" http://localhost/listen-his-songs/user/searchfriend.html";
	 });
	$.ajax({
		url:"../p/getfriend.php",
		success:function(data){
			var fri1=data.split("!");
			var num=parseInt(fri1[0]);
			var fri=fri1[1];
			var fri2=fri.split("|");
			$("#friends").append("<option id=fri2[0]>我</option>");   
			for(var i=0; i<num; i++){ 
					$("#friends").append("<option id=fri2[i+1]>" + fri2[i+num+1] + "</option>");  
			}
		}
	});
});