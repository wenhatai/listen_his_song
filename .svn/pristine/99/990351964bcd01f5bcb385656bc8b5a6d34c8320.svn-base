 function change(obj)
 {   
      if(obj.className=="even"||obj.className=="odd")
	{
	   obj.className="onthis";
	}
	else{
	   var o=document.getElementById("list_all");
	   var num=o.childNodes.length
	   for(var i=0;i<num;i++)
	   {
	      if(o.children[i]==obj)
		  {
		     if((i+1)%2!=0)
			 {
			  obj.className="even";
			  }
			  else{
			  obj.className="odd";
			  }
		  } 
	   }
	} 
 }
