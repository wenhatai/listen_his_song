  function change(obj)
 {
      if(obj.className=="even"||obj.className=="odd")
	{
	   obj.className="onthis";
	}
	else{
	   var o=document.getElementById("list_all");
	   var num=o.childNodes.length
	   for(var i=0;i<num;i++)
	   {
	      if(o.children[i]==obj)
		  {
		     if((i+1)%2!=0)
			 {
			  obj.className="even";
			  }
			  else{
			  obj.className="odd";
			  }
		  }
	   }
	} 
 }
 $(document).ready(function(){
	$.ajax({
		url:"p/showsong_whenin.php",
		method:"post",
		data:{'openid':openid},
		success:function(data){
			var fri1=data.split("!");
			var num=parseInt(fri1[0]);
			if(num == 0)
			{
			   $("#list_all").append("<li class='even' id='five'><span class='list1'>序号</span><span class='list2'>歌名</span><span class='list3'>流派</span><span class='list4'>播放次数</span></li>");  
               $("#list_all").append("<li class='odd' >&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;"+
			   "对不起！&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 未搜索到相关歌曲！&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;"+
			   "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</li>");			   
			}
			else
			{
			var fri=fri1[1];
			var fri2=fri.split("|");
			   $("#list_all").append("<li class='even' id='five'><span class='list1'>序号</span><span class='list2'>歌名</span><span class='list3'>流派</span><span class='list4'>播放次数</span></li>");   
			for(var i=0; i<num; i++){
                 if(i % 2==0)
                  {				 
					$("#list_all").append("<li class='odd' onclick='change(this)' id="+fri2[i+3*num]+"><span class='list1'>"+(i+1)+"</span><span class='list2'>"+fri2[i]+"</span><span class='list3'>"+fri2[i+num]+"</span><span class='list4'>"+fri2[i+2*num]+"</span></li>");  
				  }
				  else{
				    $("#list_all").append("<li id="+fri2[i+3*num]+" class='even' onclick='change(this)'><span class='list1'>"+(i+1)+"</span><span class='list2'>"+fri2[i]+"</span><span class='list3'>"+fri2[i+num]+"</span><span class='list4'>"+fri2[i+2*num]+"</span></li>"); 
				  }
			  }
			}
		}
	});
});

 