
$(document).ready(function(){
 $("#search-text").click(function(){
  var opanel1 = document.getElementById("search-text"); 
   opanel1.value="";
 });
  $("#search-sub").click(function(){
   document.getElementById('playlist').style.display ="none";
   document.getElementById('list_all').style.display ="block";
 var opane2 = document.getElementById("list_all");
 var search1 = document.getElementById("search-text");
  while(opane2.firstChild)
 {
    opane2.removeChild(opane2.firstChild);
 }
    var songname = search1.value;
	  if(songname=="")
	 {
	   alert("曲名不能为空！");
	   return;
	 }
	  	$.ajax({
		url:"p/searchsong_index.php",
		type:"POST",
		data:{"name":songname},
		success:function(data){
			var fri1=data.split("!");
		/*	alert(fri1[0].charAt(0));
			alert(fri1[0].charAt(1));
			alert(fri1[0].charAt(2));*/
			var num=parseInt(data.charAt(2));
			if(num == 0)
			{
			   $("#list_all").append("<li id='listtitle' class='jp-playlist-item' ><span class='list1'>歌名</span><span class='list2'>流派</span><span class='list3'>下载</span></li>");  
               $("#list_all").append("<li class='jp-playlist-item' >&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;"+
			   "对不起 ！&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 未搜索到相关歌曲！&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;"+
			   "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</li>");
			}
			else
			{
			var fri=fri1[1];
			var fri2=fri.split("|");
			 $("#list_all").append("<li id='listtitle' class='jp-playlist-item' ><span class='list1'>歌名</span><span class='list2'>流派</span><span class='list3'>下载</span></li>");   
			for(var i=0; i<num; i++){
                 if(i % 2==0)
                  {				 
					$("#list_all").append("<li class='jp-playlist-item'  id="+fri2[i+3*num]+"><span class='list1'>"+fri2[i]+"</span><span class='list2'>"+fri2[i+num]+"</span><span class='list3'>"+"下载"+"</span></li>");  
				  }
				  else{
				    $("#list_all").append("<li class='jp-playlist-item'  id="+fri2[i+3*num]+"><span class='list1'>"+fri2[i]+"</span><span class='list2'>"+fri2[i+num]+"</span><span class='list3'>"+"下载"+"</span></li>"); 
				  }
			}
			}
		}
	});
 });
});