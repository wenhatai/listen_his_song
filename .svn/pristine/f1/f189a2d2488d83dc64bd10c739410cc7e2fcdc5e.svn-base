var playlist =$( 
	[{
		title:"Cyber Sonnet",
		artist:"saber",
		mp3:"http://www.jplayer.org/audio/mp3/TSP-07-Cybersonnet.mp3",
	},{
		title:"Sakura's Theme",
		free:true,
		artist:"saber",
		mp3:"music/Sakura's Theme.mp3"
	}]
);

var myPlayerlist;

$(document).ready(function(){
	var addplaylist=new Array();
	myPlayerlist = new jPlayerPlaylist(
	{
		jPlayer: "#jquery_jplayer_1",
		cssSelectorAncestor: "#jp_container_1"
	}, 
	playlist, 
	{
		playlistOptions: {
			autoPlay: false,
			loopOnPrevious: true,
			shuffleOnLoop: true,
			enableRemoveControls: true,
		},
		swfPath: "js/Jplayer.swf",
		supplied: "mp3",
		verticalVolume: true,
		volume: 0.75,
		wmode: "window"
	});

	$("#list_all").live("click",function(){
		var id=window.event.srcElement.id.substring(4);
		$.ajax({
			url:"p/clickingsong.php",
			type:"POST",
			data:{"id":id},
			success:function(data){
				var song = eval('(' + data + ')');
				title=song.name.split(".");
				for(var i=0;i<addplaylist.length;i++){
					if(addplaylist[i]==title[0]){
						myPlayerlist.play(i+playlist.length);
						return ;
					}
				}
				addplaylist.push(title[0]);
				var path="music/"+song.name;
				playlist.add({
					title:title[0],
					free: true,
					mp3:path,
				});
				myPlayerlist.add({
					title:title[0],
					free: true,
					mp3:path,
				});
				myPlayerlist.play(-1);
			}
		});
	});
});
