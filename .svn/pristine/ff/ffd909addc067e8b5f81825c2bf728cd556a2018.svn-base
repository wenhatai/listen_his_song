$(document).ready(function(){	
	$(".list").live("click",function(){
		var id=window.event.srcElement.id;
		$.ajax({
			url:"p/friendsongs.php",
			type:"POST",
			data:{"id":id},
			success:function(data){
				var songs = eval('(' + data + ')');
				document.getElementById('playlist').style.display ="none";
				$("#list_all ul").html("");
				for(var i=0;i<songs.length;i++){
					if(i%2==0)
						var addclass="even";
					else
						addclass="odd";
					$("#list_all ul").append("<li class='"+ addclass +"'>"
					+"<span id='sid_"+songs[i].sid+"' class='list1'>"+ songs[i].song.name +"</span>"
					+"<span class='list2'>"+ songs[i].song.genre_name +"</span>"
					+"<span class='list3'>hot</span><span class='list4'>下载</span></li>");
				}
				document.getElementById('list_all').style.display ="";
			}
		});
	});
});